			"react": [ "jspm_packages/npm/@types/react@15.0.23/index" ],
			"react-dom": [ "jspm_packages/npm/@types/react-dom@15.5.0/index" ],
			"redux": [ "jspm_packages/npm/redux@3.6.0/index" ],
			"redux-saga/*": [ "jspm_packages/npm/redux-saga@0.14.8/*" ],
