			"redux-batched-actions": [ "jspm_packages/npm/redux-batched-actions@0.2.0/lib/index.d.ts" ]
			//get from https://raw.githubusercontent.com/Semantic-Org/Semantic-UI-Ract/master/typings/index.d.ts
			//"semantic-ui": [ "typings/semantic-ui-react/index" ]
