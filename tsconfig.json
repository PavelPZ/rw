			"tslib": [ "jspm_packages/npm/tslib@1.6.1/tslib.d.ts" ],
			"rw-router": [ "rw-router/index" ],
			"rw-redux": [ "rw-redux/index" ],
			"rw-login": [ "rw-login/index" ],
			"rw-config": [ "rw-config/index" ],
			"rw-course": [ "rw-course/index" ],

			"lm/*": [ "lm/*" ],
			"rw-instr/*": [ "rw-instr/*" ],
			"rw-lib/*": [ "rw-lib/*" ],

			//"rw-router": [ "rw-router/index" ],
			//"rw-redux": [ "rw-redux/index" ],
			//"rw-login": [ "rw-login/index" ],
			//"rw-config": [ "rw-config/index" ],

			////"rw-course/*": [ "rw-course/*" ],
			//"rw-lib/*": [ "rw-lib/*" ],
			//"rw-instr/*": [ "rw-instr/*" ],
			"rw-gui-rt/*": [ "rw-gui-rt/*" ],

			//"rw-course": [ "rw-course/index" ],

